# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Merchant admin host (all tenant admins use this; no per-tenant subdomains)
# Dev default: merchant.localhost. Prod example: merchant.mydomain.mn
MERCHANT_HOST=merchant.mydomain.mn

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# QPay
QPAY_CLIENT_ID=your_client_id
QPAY_CLIENT_SECRET=your_client_secret
QPAY_INVOICE_CODE=your_invoice_code
QPAY_API_URL=https://merchant-sandbox.qpay.mn/v2

# CallPro SMS
CALLPRO_API_KEY=your_callpro_key
CALLPRO_API_URL=your_callpro_url
CALLPRO_SENDER_NAME=BOOKSTORE

# Session
SESSION_SECRET=your_session_secret_min_32_chars
